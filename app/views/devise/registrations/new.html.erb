<% if Rails.env.development? %>
  <main>
    <div id="login-area" class="relative py-12 bg-gray-100 bg-gray-900 bg-opacity-40">
      <div class="container xl:max-w-6xl mx-auto px-4">
        <div class="flex flex-wrap flex-row -mx-4 justify-center">
          <div class="max-w-full w-full md:w-2/3 lg:w-1/2 px-6 px-12">
            <div class="relative">
              <div class="p-6 py-8 px-12 rounded-lg bg-white bg-gray-800 shadow-xl">
                <h1 class="text-2xl leading-normal mb-6 font-bold text-gray-300 text-center">Registrar Cuenta</h1>
                  <hr class="block w-12 h-0.5 mx-auto my-5 bg-gray-700 border-gray-700">
                </br>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <div class="field">
                      <br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Correo Electrónico" %>
                  </div>
                  <div class="field">
                      <br />
                    <%= f.text_field :username, autofocus: true, class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Nombre de usuario" %>
                  </div>
                  <div class="field">
                      <br />
                    <%= f.phone_field :phone_number, autofocus: true, class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Número de teléfono" %>
                  </div>
                  <br />
                  <div class="field ">
                    <%= f.password_field :password, autocomplete: "new-password", class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Contraseña" %>
                  </div>
                  <div class="field">
                    <br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Confirmar contraseña" %>
                  </div>
                     </br>
                  <div class="actions">
                    <%= f.submit "Completar registro", class: "w-full py-2 px-4 inline-block text-center rounded leading-normal text-gray-100 bg-green-700 border border-green-700  hover:text-white hover:bg-emerald-800 hover:ring-0 hover:border-emerald-800 focus:bg-emerald-800 focus:border-emerald-800 focus:outline-none focus:ring-0" %>
                  </div> 
                <% end %>
                </br></br></br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<% else %>  
 <main>
    <div id="login-area" class="relative py-12 bg-gray-100 bg-gray-900 bg-opacity-40">
      <div class="container xl:max-w-6xl mx-auto px-4">
        <div class="flex flex-wrap flex-row -mx-4 justify-center">
          <div class="max-w-full w-full md:w-2/3 lg:w-1/2 px-6 px-12">
            <div class="relative">
              <div class="p-6 py-8 px-12 rounded-lg bg-white bg-gray-800 shadow-xl">
                <h1 class="text-2xl leading-normal mb-6 font-bold text-gray-300 text-center">Registrar Cuenta</h1>
                  <hr class="block w-12 h-0.5 mx-auto my-5 bg-gray-700 border-gray-700">
                </br>
                 <div class="text-black text-shadow-md text-xl max-w-md w-full text-center bg-yellow-600 items-center rounded p-6 space-y-4"> 
                  <h2 class="font-sans text-red-900 uppercase">Bienvenido</h2>
                  <h2 class="font-sans text-red-800 uppercase">Estamos en proceso de desarrollo.</h2>
                 </div>
                </br></br></br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

<% end %>

<% if flash[:notice].present? %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert].present? %>
  <p><%= flash[:alert] %></p>
<% end %>