
  <main>
    <div id="login-area" class="relative py-12 bg-gray-100 bg-gray-900 bg-opacity-40">
      <div class="container xl:max-w-6xl mx-auto px-4">
        <div class="flex flex-wrap flex-row -mx-4 justify-center">
          <div class="max-w-full w-full md:w-2/3 lg:w-1/2 px-6 sm:px-12">
            <div class="relative">
              <div class="p-6 sm:py-8 sm:px-12 rounded-lg bg-white bg-gray-800 shadow-xl">
                <h1 class="text-2xl leading-normal mb-6 font-bold text-gray-300 text-center">Iniciar Sessión</h1>
                  <hr class="block w-12 h-0.5 mx-auto my-5 bg-gray-700 border-gray-700">
                </br>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Nombre de usuario" %>
                  </div>
                  <br/>
                  <div class="field mb-6">
                    <%= f.password_field :password, autocomplete: "current-password", class: "w-full leading-5 relative py-2 px-4 rounded text-blue-500 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Contraseña" %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me, class: "form-checkbox h-5 w-5 text-emerald-800 bg-gray-700 border border-gray-300 border-gray-700 rounded focus:outline-none" %>
                      <%= f.label :Recordar_usuario, class: "ltr:ml-2 rtl:mr-2 text-gray-500" %>
                    </div>
                    </br>
                  <% end %>
                  <div class="actions">
                  </div>
                  <div class="grid">
                    <%= f.submit "Ingresar", class: "py-2 px-4 inline-block text-center rounded leading-normal text-gray-100 bg-green-700 border border-green-700  hover:text-white hover:bg-emerald-800 hover:ring-0 hover:border-emerald-800 focus:bg-emerald-800 focus:border-emerald-800 focus:outline-none focus:ring-0" %>
                  </div>           
                <% end %>
                </br>
                <%= render "devise/shared/links" %>
                </br></br></br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

