<%= form_with(model: auction, class: "contents") do  |form| %>


  <div class="my-5">
    <%= form.number_field :user_id, id: :auction_user_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full hidden", value:current_user.id %>
  </div>

  <div class="my-5">
    <%= form.number_field :category_id, id: :auction_category_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full hidden", value:1 %>
  </div>

  <div class="my-5">
    <%= form.text_field :name,  class: "w-full leading-5 relative py-2 px-4 rounded text-blue-300 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Nombre del articulo"  %>
  </div>

  <div class="my-5">
    <%= form.text_field :description,  class: "w-full leading-5 relative py-2 px-4 rounded text-blue-300 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Descripción"  %>
  </div>

  <div class="field">
  <%= form.file_field :image, class:"w-full leading-5 relative py-2 px-4 rounded text-blue-300 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 dark:bg-gray-700 dark:border-gray-700 dark:focus:border-gray-600" %>
  </div>
  <br/>
  <div class="mb-6">
    <input class="w-full leading-5 relative py-2 px-4 rounded text-blue-300 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300" list="datalistOptions" id="exampleDataList" placeholder="Escriba o busque la categoría">
    <datalist id="datalistOptions">
      <% category = Category.all %>
      <% category.each do |cat| %>
        <option value="<%= cat.name %>">
      <% end %>
    </datalist>
  </div>

  <div class="my-5">
    <%= form.number_field :initial_bid, class: "w-full leading-5 relative py-2 px-4 rounded text-blue-300 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Precio Inicial" %>
  </div>

  <div class="my-5">
    <%= form.number_field :sold_bid, class: "w-full leading-5 relative py-2 px-4 rounded text-blue-300 bg-white border border-gray-300 overflow-x-auto focus:outline-none focus:border-gray-400 focus:ring-0 text-gray-300 bg-gray-700 border-gray-700 focus:border-gray-600 placeholder-green-300", placeholder: "Venta Inmediata" %>
  </div>



  <div class="mb-6">

    <div class="flex flex-col justify-center md:flex-row md:justify-between">
      <%= form.date_select :expiration_date, data: {controller:'flatpickr'}, class: "flatpickr", placeholder: "Fecha que finaliza la subasta", type:"text", name:"start" %>

    </div>
  </div>  

  <div class="inline text-center">
    <%= form.submit class: "py-2 px-4 inline-block text-center mb-3 rounded leading-5 text-gray-100 bg-indigo-500 border border-indigo-500 bg-gradient-to-b from-indigo-400 to-indigo-600 hover:bg-indigo-600 hover:from-indigo-500 hover:to-indigo-600 focus:from-indigo-400 focus:to-indigo-600 hover:text-white hover:ring-0 hover:border-indigo-600 focus:bg-indigo-600 focus:border-indigo-600 focus:outline-none focus:ring-0 mr-2" %>
  </div>
<% end %>


